<div class="col-md-6 col-md-offset-3">
    <h2>Inscreva-se</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, label: "Senha: ", required: true, hint: ("#{@minimum_password_length} caractÃ©res mÃ­nimos" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: "Confirmar senha: ", required: true %>
      </div>

      <div class="form-actions">
        <div class="col-md-4">
                <p><%= f.button :submit, "Confirmar", class:"btn btn-custom2"%></p>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

</div>
