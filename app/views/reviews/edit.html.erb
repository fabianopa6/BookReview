<div class="col-md-6 col-md-offset-3">

    <div class="new-review-form">

        <h1>Editar Avaliação</h1>

        <%= simple_form_for([@book, @review]) do |f| %>


            <div id="rating-form">
                <label>Avaliação: </label>
            </div>

            <%= f.input :comment %>
            <div class="row">
                <div class="col-md-4">
                    <p><%= f.button :submit, class:"btn btn-custom2"%></p>
                </div>
                <div class="col-md-8">
                    <p><%= link_to "Cancelar", book_path(@book), class:"btn btn-custom2"%></p>
                </div>
            </div>
        <% end %>

        <script>
            $('#rating-form').raty({
                path: '/assets/',
                scoreName: 'review[rating]'
            });
        </script>

    </div>

</div>